{
  "name": "rpc.do",
  "version": "0.2.4",
  "description": "Managed RPC implementation for the .do platform with oauth.do authentication and cli.do tooling",
  "stability": "beta",
  "apiStability": "Follows semantic versioning. See docs/VERSIONING.md for stability guarantees.",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rpc.do": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./transports": {
      "types": "./dist/transports.d.ts",
      "import": "./dist/transports.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    },
    "./extract": {
      "types": "./dist/extract.d.ts",
      "import": "./dist/extract.js"
    },
    "./openapi": {
      "types": "./dist/openapi.d.ts",
      "import": "./dist/openapi.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./expose": {
      "types": "./dist/expose.d.ts",
      "import": "./dist/expose.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./testing": {
      "types": "./dist/testing.d.ts",
      "import": "./dist/testing.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.js"
    },
    "./middleware/logging": {
      "types": "./dist/middleware/logging.d.ts",
      "import": "./dist/middleware/logging.js"
    },
    "./middleware/timing": {
      "types": "./dist/middleware/timing.d.ts",
      "import": "./dist/middleware/timing.js"
    },
    "./middleware/validation": {
      "types": "./dist/middleware/validation.d.ts",
      "import": "./dist/middleware/validation.js"
    },
    "./nextjs": {
      "types": "./dist/adapters/nextjs.d.ts",
      "import": "./dist/adapters/nextjs.js"
    },
    "./sveltekit": {
      "types": "./dist/adapters/sveltekit.d.ts",
      "import": "./dist/adapters/sveltekit.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "cd e2e && pnpm test",
    "typecheck": "tsc --noEmit",
    "bench": "tsx benchmarks/bench.ts",
    "check:publish": "node -e \"const pkg = require('./package.json'); const deps = JSON.stringify(pkg.dependencies || {}); if (deps.includes('workspace:')) { console.error('ERROR: workspace: protocol found in dependencies. Replace with actual versions before publishing.'); process.exit(1); }\"",
    "prepublishOnly": "pnpm check:publish && pnpm build && pnpm test",
    "release": "pnpm build && changeset publish",
    "version": "changeset version"
  },
  "keywords": [
    "rpc",
    "proxy",
    "capnweb",
    "transport",
    "websocket",
    "http",
    "cloudflare",
    "workers"
  ],
  "author": {
    "name": "Platform.do",
    "email": "npm@platform.do",
    "url": "https://platform.do"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/rpc.do.git"
  },
  "bugs": {
    "url": "https://github.com/dot-do/rpc.do/issues"
  },
  "homepage": "https://rpc.do",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@dotdo/capnweb": "^0.4.0"
  },
  "peerDependencies": {
    "@dotdo/types": ">=0.1.0",
    "glob": "^13.0.0",
    "oauth.do": "^0.2.0",
    "ts-morph": "^27.0.2",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@dotdo/types": {
      "optional": true
    },
    "glob": {
      "optional": true
    },
    "oauth.do": {
      "optional": true
    },
    "ts-morph": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@cloudflare/vitest-pool-workers": "^0.8.0",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@dotdo/rpc": "file:core",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.27.1",
    "glob": "^13.0.0",
    "ts-morph": "^27.0.2",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.5.2",
    "@vitest/coverage-v8": "^2.1.8",
    "vitest": "^2.1.8",
    "wrangler": "^4.0.0",
    "ws": "^8.16.0"
  }
}
