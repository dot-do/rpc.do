{
  "name": "rpc.do",
  "version": "0.2.1",
  "description": "Lightweight transport-agnostic RPC client proxy",
  "type": "module",
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "rpc.do": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./transports": {
      "types": "./dist/transports.d.ts",
      "import": "./dist/transports.js"
    },
    "./auth": {
      "types": "./dist/auth.d.ts",
      "import": "./dist/auth.js"
    },
    "./errors": {
      "types": "./dist/errors.d.ts",
      "import": "./dist/errors.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist && tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "check:publish": "node -e \"const pkg = require('./package.json'); const deps = JSON.stringify(pkg.dependencies || {}); if (deps.includes('workspace:')) { console.error('ERROR: workspace: protocol found in dependencies. Replace with actual versions before publishing.'); process.exit(1); }\"",
    "prepublishOnly": "pnpm check:publish && pnpm build && pnpm test"
  },
  "keywords": [
    "rpc",
    "proxy",
    "capnweb",
    "transport",
    "websocket",
    "http",
    "cloudflare",
    "workers"
  ],
  "author": {
    "name": "Platform.do",
    "email": "npm@platform.do",
    "url": "https://platform.do"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/rpc.do.git"
  },
  "bugs": {
    "url": "https://github.com/dot-do/rpc.do/issues"
  },
  "homepage": "https://rpc.do",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {},
  "optionalDependencies": {
    "capnweb": "^0.4.0"
  },
  "peerDependencies": {
    "oauth.do": "^0.2.0"
  },
  "peerDependenciesMeta": {
    "oauth.do": {
      "optional": true
    }
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.1",
    "tsup": "^8.0.0",
    "typescript": "^5.5.2",
    "vitest": "^2.1.8"
  }
}
