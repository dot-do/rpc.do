{
  "name": "@dotdo/rpc",
  "version": "0.2.4",
  "description": "Abstract core library for building RPC-enabled Cloudflare Durable Objects",
  "stability": "production-ready",
  "apiStability": "Follows semantic versioning. See docs/VERSIONING.md for stability guarantees.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lite": {
      "types": "./dist/lite.d.ts",
      "import": "./dist/lite.js"
    },
    "./collections": {
      "types": "./dist/collections.d.ts",
      "import": "./dist/collections.js"
    },
    "./do-collections": {
      "types": "./dist/do-collections.d.ts",
      "import": "./dist/do-collections.js"
    },
    "./events": {
      "types": "./dist/events-integration.d.ts",
      "import": "./dist/events-integration.js"
    },
    "./__testutils__": {
      "types": "./dist/__testutils__/index.d.ts",
      "import": "./dist/__testutils__/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "prepublishOnly": "pnpm build && pnpm test"
  },
  "keywords": [
    "rpc",
    "durable-objects",
    "cloudflare",
    "workers",
    "capnweb",
    "hibernation"
  ],
  "author": {
    "name": "Platform.do",
    "email": "npm@platform.do",
    "url": "https://platform.do"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dot-do/rpc.do.git",
    "directory": "core"
  },
  "dependencies": {
    "@dotdo/capnweb": "^0.4.0",
    "@dotdo/collections": "^0.1.0",
    "@dotdo/do": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241205.0",
    "@dotdo/events": "^0.1.0",
    "@dotdo/types": "^0.1.0",
    "esbuild": "^0.27.2",
    "sql.js": "^1.13.0",
    "tsup": "^8.0.0",
    "typescript": "^5.5.2",
    "vitest": "^2.1.8"
  },
  "peerDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@dotdo/events": ">=0.1.0",
    "@dotdo/types": ">=0.1.0",
    "colo.do": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@dotdo/events": {
      "optional": true
    },
    "@dotdo/types": {
      "optional": true
    },
    "colo.do": {
      "optional": true
    }
  }
}
